<%- layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br>
            <h2>Update Listing:</h2>
            <form action="/listings/<%= listing._id %>?_method=PUT" method="post" novalidate class="needs-validation">
                <div>
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Add a title for your Place"
                        value="<%= listing.title %>" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a title.
                    </div>
                </div>
                <br>
                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Describe your Place" class="form-control"
                        required><%= listing.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a description.
                    </div>
                </div>
                <br>
                <div>
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="listing[image]" placeholder="Provide image URL/Link"
                        value="<%= listing.image %>" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a valid image URL.
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" placeholder="Price (in INR)"
                            value="<%= listing.price %>" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a valid price.
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" placeholder="Which nation.."
                            value="<%= listing.country %>" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter a country.
                        </div>
                    </div>
                </div>
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Locate your Place"
                        value="<%= listing.location %>" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a location.
                    </div>
                </div>
                <br><br>
                <button class="btn btn-dark mb-5 add-btn">Confirm & Update</button>
                <br><br>
            </form>
        </div>
    </div>