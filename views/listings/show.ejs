<%- layout("/layouts/boilerplate") %>
<body>
    <h2>Listing Details:</h2>
    <ul>
        <li>
            <%= listing.title %>
        </li>
        <li>
            <%= listing.description %>
        </li>
        <li>&#8377; <%= listing.price.toLocaleString("en-IN") %>
        </li>
        <li>
            <%= listing.location %>
        </li>
        <li>
            <%= listing.country %>
        </li>
    </ul>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
            <button>Delete Listing</button>
    </form>
</body>
