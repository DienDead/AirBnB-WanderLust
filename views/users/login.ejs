<%- layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h2 class="col-6 offset-3">WanderLust - Login</h2>
        <div class="col-6 offset-3">
            <br>
            <form action="/login" method="post" novalidate>
                <div>
                    <label for="username" class="form-label">UserName</label>
                    <input type="text" id="username" name="username" placeholder="e.g. , JhonDoe" class="form-control" required>
                </div>
                <br>
                <div>
                    <label for="password" class="form-label">Password</label>
                    <input type="password" id="password" name="password" placeholder="Any unique password"
                        class="form-control" required>
                </div>
                <br>
                <button class="btn btn-dark">Login</button>
            </form>
        </div>
    </div>